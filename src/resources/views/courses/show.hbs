<div class="container">
  <h1>Course Detail</h1>
  <div class="row">
    <div class="col-lg-3">
      <button>
        Mua ngay
      </button>
    </div>
    <div class="col-lg-9">
      <h2>{{courses.name}}</h2>
      <iframe
        width="560"
        height="315"
        src="https://www.youtube.com/embed/{{courses.videoId}}"
        title="YouTube video player"
        frameborder="0"
        allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture; web-share"
        allowfullscreen
      ></iframe>
      <p>
        {{courses.description}}
      </p>
    </div>
  </div>
</div>