<div class="container">
    <h1>Đăng khoá học</h1>
    <form method="POST" action="/courses/store">
        <div class="mb-3">
            <label for="name" class="form-label">Tên khoá học</label>
            <input type="text" class="form-control" id="name" name="name" />
        </div>
        <div class="mb-3">
            <label for="description" class="form-label">Mô tả</label>
            <input type="text" id="description" name="description" class="form-control" />
        </div>
        <div class="mb-3">
            <label for="videoId" class="form-label">Video</label>
            <input type="text" class="form-control" id="videoId" name="videoId" />
        </div>
        <button type="submit" class="btn btn-primary">Đăng khoá học</button>
    </form>
</div>
